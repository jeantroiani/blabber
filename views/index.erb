
<div id="welcome">
	<%if user_of_session %>
		<h2>Welcome <%= user_of_session.user_name %></h2>
	<%end%>
</div>

<%if user_of_session != nil %>
<div id="sign_out">
	<form method="POST" action="/sign_out">
		<button name= "sign_out"value="nil">Sign out</button>
	</form>
</div><!--end of sign out-->
	<%end%>


<%if user_of_session == nil %>
<div id="sign_in">
<fieldset>
	<legend>Sign in</legend>
		<form action="/" method="POST">
				Username:<input type="text" 		name="username"><br>
				Password:<input type="password" name="password"> <br>
				<button type="submit" name="Submit" value="Sign in">Sign in</button>
		</form>
</fieldset>
</div><!--end of sign in-->
	<%end%>

<%if user_of_session == nil %>
<div id="sign_up">
<a href="/sign_up">Sign up</a>
</div>
	<%end%>


<div id="flash_notice">
	<%if flash[:notice] %>
		<%= flash[:notice]%>
	<%end%>
</div><!--end of flash notice-->

<% if flash[:errors] %>
	<div id="flash_errors">
			<%= flash[:errors]%>
	</div><!--end of flash notice-->
<% end %>


<%if user_of_session != nil %>
 <div id="post_it">
		<form action="/post_it" method="POST">
			<input type="text" name="post" size="38";><br>
			<button type="submit" name="Post" value="Post">Post</button>
		</form>
	</div><!--post it-->
<%end%>

<div id="post">
	<% @posts.reverse.each do |post| %>
	<article><%=post.text%>,
		<spam class="user_post">
			<a href="/user_info/<%=post.user.user_name%>"><%=post.user.user_name%>
			</a>
		</spam>
	</article>
	<%end%>
</div><!--end of post-->



 